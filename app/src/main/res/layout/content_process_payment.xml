<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_process_payment"
    tools:context="nfc.android.mobilepayment.ProcessPayment">
    <TextView android:id="@+id/sync_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="15dp" />
    <Button android:id="@+id/confirm_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/confirm_payment"
        android:layout_below="@+id/sync_message"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="75dp">
    </Button>


    <Button android:id="@+id/decline_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="@string/decline_payment"
        android:layout_below="@+id/confirm_payment"
        android:layout_alignParentStart="true">
    </Button>
</RelativeLayout>
